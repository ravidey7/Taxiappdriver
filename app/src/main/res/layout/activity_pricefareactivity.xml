<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"

    android:alpha="0.9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center">

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/theme_color">

            <views.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride Fare"
                android:id="@+id/vh"
                geekui:customTypeface="fonts/AllerDisplay.ttf"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="20dp"
                />
        </FrameLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19b0abab">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#19b0abab">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Payable Amount"
                    android:id="@+id/textView7"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#000"
                    android:textSize="22dp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp" />
                <views.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="465.90 INR"
                    android:id="@+id/inrrate"
                    geekui:customTypeface="fonts/AllerDisplay.ttf"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Distance"
                    android:id="@+id/distance"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginTop="5dp" />
                <views.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26 K.M."
                    android:id="@+id/km"
                    geekui:customTypeface="fonts/AllerDisplay.ttf"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Time"
                    android:id="@+id/waitingtime"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginTop="5dp" />
                <views.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72 Minutes"
                    android:id="@+id/min"
                    geekui:customTypeface="fonts/AllerDisplay.ttf"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
                android:gravity="top|center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate Your Client"
                    android:id="@+id/textView10"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:progressBackgroundTint="#bbbbbb"
                    android:secondaryProgressTint="#000"
                    android:isIndicator="true"
                    android:clickable="true" />
            </LinearLayout>

            <views.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:id="@+id/done"
                geekui:customTypeface="fonts/AllerDisplay.ttf"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/arrivedbg" />
        </LinearLayout>
</ScrollView>

    </LinearLayout>
</LinearLayout>