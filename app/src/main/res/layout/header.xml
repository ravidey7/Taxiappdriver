<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    xmlns:geekui="http://schemas.android.com/tools"
    android:background="@drawable/rrttttt"
    android:orientation="vertical"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/llforprofile">

        <views.TypefaceTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:text="Spinno Singh"
            android:textSize="18dp"
            geekui:customTypeface="fonts/JosefinSans-Bold.ttf"

            android:layout_marginRight="5dp" />

        <views.TypefaceTextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="spinno@gmail.com"
            android:textSize="18dp"
            geekui:customTypeface="fonts/JosefinSans-Bold.ttf"

            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <com.pkmmte.view.CircularImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/men"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="35dp"
        android:id="@+id/circleView"
        />
</RelativeLayout>