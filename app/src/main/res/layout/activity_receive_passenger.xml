<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spinno.taxiappdriver.ReceivePassengerActivity"
    android:orientation="vertical"
    android:gravity="top|center"
    android:background="#000">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:clickable="false">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/arrow2" />

        <views.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept Trip ??"
            android:id="@+id/vh"
            geekui:customTypeface="fonts/AllerDisplay.ttf"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="300dp"
            android:layout_height="300dp"

            custom:donut_unfinished_stroke_width="5dp"
            custom:donut_finished_stroke_width="10dp"

            custom:donut_progress="0"
            custom:donut_inner_bottom_text_size="20dp"
            custom:donut_inner_bottom_text_color="#dec90b"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#000"
            android:layout_gravity="center" />

        <views.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here to accept ...."
            android:id="@+id/txter"
            geekui:customTypeface="fonts/JosefinSans-Bold.ttf"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </FrameLayout>
    <views.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Address"
        android:id="@+id/title"
        geekui:customTypeface="fonts/JosefinSans-Bold.ttf"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16dp" />
    <views.TypefaceTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address Of Passenger"
        android:id="@+id/addressss"
        android:layout_gravity="center_horizontal"
        geekui:customTypeface="fonts/AllerDisplay.ttf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">
        <views.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.9 *"
            android:id="@+id/star"
            geekui:customTypeface="fonts/AllerDisplay.ttf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:gravity="center|right"
            android:layout_weight="1"
            android:layout_marginTop="5dp" />
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center" />
        <views.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Car"
            android:id="@+id/Type"
            geekui:customTypeface="fonts/AllerDisplay.ttf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:gravity="left|center"
            android:layout_weight="1"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</LinearLayout>
