<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.my.spinno.navigationactivities.Myridesactivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/theme_color">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bck"
            android:layout_gravity="left|center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/arrow2" />

        <views.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency"
            android:id="@+id/title"
            geekui:customTypeface="fonts/AllerDisplay.ttf"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        <views.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/save"
            geekui:customTypeface="fonts/AllerDisplay.ttf"
            android:layout_gravity="center|right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginRight="20dp" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbbbbb"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_margin="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameenter"
                    android:background="@android:drawable/editbox_background_normal"
                    android:hint="Enter Name"
                    android:textColor="#000"
                    android:textColorHint="#ff525252"
                    android:textSize="18dp"
                    android:singleLine="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobenter"
                    android:background="@android:drawable/editbox_background_normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Enter Mobile Number"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:textColorHint="#ff525252"
                    android:singleLine="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailenter"
                    android:background="@android:drawable/editbox_background_normal"
                    android:textColorHint="#ff525252"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:hint="Enter Email Id (optional)"
                    android:layout_marginBottom="2dp"
                    android:singleLine="true" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List your emergency contact&apos;s name, mobile number and email address."

                android:id="@+id/textView10"
                android:textColor="#ff141414"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note : Your contact can be alerted only after verification "

                android:id="@+id/textView1110"
                android:textColor="#ff141414"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Always share my ride with my contact."
                android:id="@+id/checkBox"
                android:checked="false"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:textColor="#000" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
